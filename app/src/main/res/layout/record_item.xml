<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="5dp"
    android:background="@drawable/bottom_border"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/main_info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
                <pl.droidsonroids.gif.GifImageButton
                    android:id="@+id/play"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gif_play_pause" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:text="Record name"
                android:ellipsize="end"
                android:maxLines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end|center">

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_repeat"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:tint="@color/bootstrap_brand_primary"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/total_repeats"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:inputType="number"
                android:hint="0"
                android:maxLength="3"
                android:gravity="center"/>
            <ImageButton
                android:id="@+id/loop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_loop"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
            <ImageButton
                android:id="@+id/settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/change_content"
                android:backgroundTint="@color/white"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/main_info_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="65dp">
        <ProgressBar
            android:id="@+id/upload_words_progress"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:visibility="invisible"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/duration"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/duration_of_record"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/words_count"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>